     Swal.fire({
       icon: 'error',
       title: '<span style="color: #d32f2f; font-weight: bold;">Access Denied</span>',
       html: '<div style="text-align: center; font-size: 16px;"><%= message %></div>',
       background: '#fff',
       confirmButtonColor: '#d32f2f',
       confirmButtonText: 'OK',
       customClass: {
         popup: 'custom-swal-popup',
