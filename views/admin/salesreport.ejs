            <tbody>
              <% let orderIndex = 0; %>
              <% let totalBillAmount = 0; %>
              <% let totalDiscountAmount = 0; %>
              <% orders.forEach(order => { %>
              <% order.items.forEach((item, index) => { %>
              <tr class="order-row" data-order-index="<%= orderIndex %>">
                <% if (index === 0) { %>
                <td rowspan="<%= order.items.length %>"><%= ++orderIndex %></td>
                <td rowspan="<%= order.items.length %>"><%= order.user.username %></td>
                <td rowspan="<%= order.items.length %>"><%= order.user.email %></td>
                <% } %>
                <td><%= item.productId.name %></td>
                <td><%= item.quantity %></td>
                <td><%= item.productId.price.toFixed(2) %></td>
                <td><%= item.Status %></td>
                <% if (index === 0) { %>
                <td rowspan="<%= order.items.length %>"><%= order.billTotal.toFixed(2) %></td>
                <td rowspan="<%= order.items.length %>"><%= new Date(order.orderDate).toLocaleDateString() %></td>
