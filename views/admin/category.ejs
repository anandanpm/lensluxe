        <div class="col-nav">
            <!-- Logout button -->
            <a href="/admin/adminlogout" class="btn" style="background-color: #008178; color: white;">Logout</a>
        </div>
    </header>
    <!-- Sidebar -->
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
